@page
@model CraftHouse.Web.Pages.ProductManagement

<div>PRODUCT ADD</div>
<form method="post" asp-page-handler="Product">
    <label for="name">Name</label>
    <input type="text" id="name" asp-for="Name"/>

    <label for="isAvailable">Is available</label>
    <select id="isAvailable" asp-for="IsAvailable">
        <option value="true">available</option>
        <option value="false">unavailable</option>
    </select>

    <label for="price">Price</label>
    <input type="number" step="0.01" id="price" asp-for="Price"/>

    <label for="description">Description</label>
    <input type="text" id="description" asp-for="Description"/>

    <label for="categoryId">Category name</label>
    <select id="categoryId" asp-for="CategoryId">
        @foreach (var category in Model.Categories)
        {
            <option value="@category.Id">@category.Name</option>
        }
    </select>

    <input type="submit" value="Add"/>
</form>

<br/><br/>

<div>OPTION ADD</div>
<form method="post" asp-page-handler="Option">
    <label for="name">Name</label>
    <input type="text" id="name" asp-for="Name"/>

    <label for="productId">Product name</label>
    <select id="productId" asp-for="ProductId">
        @foreach (var product in Model.Products)
        {
            <option value="@product.Id">@product.Name</option>
        }
    </select>

    <br/>
    <label for="firstOptionValue">Option 1 value</label>
    <input type="text" id="firstOptionValue" asp-for="FirstOptionValue"/>

    <label for="firstOptionPrice">Option 1 price</label>
    <input type="number" step="0.01" id="firstOptionPrice" asp-for="FirstOptionPrice"/>

    <br/>
    <label for="secondOptionValue">Option 2 value</label>
    <input type="text" id="secondOptionValue" asp-for="SecondOptionValue"/>

    <label for="secondOptionPrice">Option 2 price</label>
    <input type="number" step="0.01" id="secondOptionPrice" asp-for="SecondOptionPrice"/>

    <br/>
    <label for="thirdOptionValue">Option 3 value</label>
    <input type="text" id="thirdOptionValue" asp-for="ThirdOptionValue"/>

    <label for="firstOptionPrice">Option 3 price</label>
    <input type="number" step="0.01" id="thirdOptionPrice" asp-for="ThirdOptionPrice"/>


    <input type="submit" value="Add options"/>

</form>

<br/><br/>

