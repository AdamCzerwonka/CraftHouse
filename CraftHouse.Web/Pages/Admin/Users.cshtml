@page "{handler?}"
@model CraftHouse.Web.Pages.Admin.Users

@{
    ViewData["title"] = "Users";
    ViewData["styles"] = "table";
}

<table class="table">
    <thead>
    <tr>
        <th class="table--center">ID</th>
        <th>Name</th>
        <th>Email</th>
        <th class="table--small_column">Role</th>
        <th class="table--center">Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model.AppUsers)
    {
        <tr>
            <td class="table--center">@user.Id</td>
            <td>@user.FirstName @user.LastName</td>
            <td>@user.Email</td>
            <td class="table--small_column">@user.UserType</td>
            <td class="table--flex">
                <a class="button" asp-page="/admin/User" asp-route-userId="@user.Id">Edit</a>
                <form asp-page-handler="delete" method="post">
                    <input type="hidden" value="@user.Id" name="userId"/>
                    <input class="button button--red" type="submit" value="Delete" />
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>