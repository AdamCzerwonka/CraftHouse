@page "{productId}"
@model ProductPage

<a asp-page="/admin/Products">Return</a>

<br/><br/>

<div>EDIT PRODUCT</div>
<form method="post" asp-page-handler="Edit">
    <input type="hidden" asp-for="ProductId" value="@Model.ProductId"/>

    <label for="nameEdit">Name</label>
    <input type="text" id="nameEdit" asp-for="Name" value="@Model.Product.Name"/>

    <label for="isAvailableEdit">Is available</label>
    <select id="isAvailableEdit" asp-for="IsAvailable">
        @if (@Model.Product.IsAvailable.Equals(true))
        {
            <option value="false">unavailable</option>
            <option value="true" selected>available</option>
        }
        else
        {
            <option value="true">available</option>
            <option value="false" selected>unavailable</option>
        }
    </select>

    <label for="priceEdit">Price</label>
    <input type="number" step="0.01" id="priceEdit" asp-for="Price" min="0" value="@Model.Product.Price.ToString().Replace(",", ".")"/>

    <label for="descriptionEdit">Description</label>
    <input type="text" id="descriptionEdit" asp-for="Description" value="@Model.Product.Description"/>

    <label for="categoryIdEdit">Category name</label>
    <select id="categoryIdEdit" asp-for="CategoryId">
        @foreach (var category in Model.Categories)
        {
            if (@Model.Product.CategoryId == category.Id)
            {
                <option value="@category.Id" selected>@category.Name</option>
            }
            else
            {
                <option value="@category.Id">@category.Name</option>
            }
        }
    </select>

    <input type="submit" value="Edit"/>
</form>